<launch>

  <!-- Args -->
  <arg name="param_file" default="hw_setup.yaml"/>

  <!-- Run node -->
  <node name="arduino_reader" pkg="pff_equipment_testing" type="arduino_reader" output="screen" required="true">

    <!-- Params -->
    <rosparam command="load" file="$(find pff_equipment_testing)/config/$(arg param_file)"/>
  </node>

</launch>